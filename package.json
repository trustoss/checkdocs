{
  "name": "checkdocs",
  "version": "0.0.1",
  "description": "Lint your project's documentation files FTW :rocket:",
  "main": "lib/lint.js",
  "bin": {
    "checkdocs": "bin/checkdocs",
    "lintdocs": "bin/checkdocs"
  },
  "scripts": {
    "test": "tap ./**/*.spec.js",
    "lint": "babel-node -- bin/checkdocs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/trustoss/checkdocs.git"
  },
  "keywords": [
    "lint",
    "docs",
    "documentation",
    "readme",
    "cli",
    "check",
    "test",
    "open",
    "source",
    "oss",
    "trustoss",
    "trust",
    "ossmanifesto",
    "manifesto"
  ],
  "author": "Ozzy Haven <npm@therebelrobot.com> (@therebelrobot)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trustoss/checkdocs/issues"
  },
  "homepage": "https://github.com/trustoss/checkdocs#readme",
  "dependencies": {
    "babel-cli": "^6.16.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "colors": "^1.1.2",
    "json-loader": "^0.5.4",
    "nopt": "^3.0.6",
    "prompt": "^1.0.0",
    "trustoss-spec": "0.0.1"
  },
  "devDependencies": {
    "careful": "^1.1.0",
    "ghooks": "^1.3.2",
    "standard": "^8.3.0",
    "tap": "^7.1.2",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "Commit message \n\n\t%s\nis not following this project's commit standards. Please follow Angular Commit Message Standards."
    },
    "careful": {
      "prefixes": [
        "feature",
        "fix",
        "release",
        "docs"
      ],
      "suggestions": {
        "features": "feature",
        "feat": "feature",
        "bugfix": "fix",
        "hotfix": "fix",
        "bug": "fix",
        "releases": "release",
        "doc": "docs"
      },
      "skip": [
        "demo",
        "develop"
      ],
      "disallowed": [
        "edge",
        "master"
      ],
      "banned": [
        "wip"
      ],
      "seperator": "/",
      "msgBranchBanned": "Branch name %s banned from push usage",
      "msgPrefixNotAllowed": "Branch must have an appropriate prefix (feature, hotfix, bugfix, docs)",
      "msgSeperatorRequired": "Branch must have an appropriate prefix (feature, hotfix, bugfix, docs)"
    },
    "ghooks": {
      "pre-commit": "careful",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm test"
    }
  }
}
